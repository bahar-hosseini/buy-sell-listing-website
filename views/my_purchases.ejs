<!DOCTYPE html>
<html lang="en">

<head>
  <title>Favourites Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- Link stylesheets here-->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/home.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- Link scripts here-->
  <script src="/vendor/jquery-3.0.0.js"></script>
</head>

<body>
  <!-- Add the header -->
  <%- include('partials/_header') %>

  <h1>My Purchases Page</h1>

  <ul>
    <% for(const key in myPurchases) { %>

      <!-- Store purchase Id -->
      <% let purchaseId = myPurchases[key]["purchase_id"] %>

      <h3>Purchase <%= purchaseId %>:</h3>

      <a href=<%=`/product/${purchaseId}` %>> <img src=<%= myPurchases[key]["photo_url"] %> alt="Product" width="200"> </a> <br>
      Product Name: <%= myPurchases[key]["product_name"] %> <br>
      Purchased By: <%= myPurchases[key]["user_name"] %> <br>
      Purchase Date: <%= myPurchases[key]["purchase_date"] %> <br>
      ----------
      <br>

    <% } %>
  </ul>

</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
  <title>Favourites Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- Link stylesheets here-->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/favourites.css" />


  <!-- Link scripts here-->
  <script src="/vendor/jquery-3.0.0.js"></script>
</head>

<body>
  <!-- Add the header -->
  <%- include('partials/_header') %>

  <h2 style="text-align: center">My favourites</h2>

  <div class="favourites-container">
  <ul>
    <% for(const key in favourites) { %>
      <div class="favourite">
      <!-- Store product Id -->
      <% let productId = favourites[key]["product_id"] %>

      <h3>Favourite <%= favourites[key]["favourite_id"] %>:</h3>
      <a href=<%=`/product/${productId}` %>> <img src=<%= favourites[key]["photo_url"] %> alt="Product" width="200"> </a> <br>
      <br>
      <b>Product Name:</b> <%= favourites[key]["product_name"] %> <br>
      <br>
      <b>Favourited By: </b> <%= favourites[key]["user_name"] %> <br>
      <br>
      <b>Date Favourited: </b> <%= favourites[key]["date_favourited"] %> <br>

      <br>
      </div>
    <% } %>
  </ul>
  </div>
</body>

</html>
